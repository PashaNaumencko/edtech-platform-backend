{
  "name": "edtech-platform-backend",
  "version": "0.0.1",
  "description": "EdTech Platform Backend - A comprehensive microservices-based learning platform",
  "author": "EdTech Platform Team",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:libs": "nest build types && nest build utils && nest build events && nest build database && nest build domain && nest build auth && nest build security && nest build communication && nest build validation && nest build notifications && nest build analytics",
    "build:check": "tsc --noEmit",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/edtech-platform-backend/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/edtech-platform-backend/test/jest-e2e.json",
    "test:db-connections": "node scripts/test-db-connections.js",
    "dev:setup": "./scripts/dev-setup.sh",
    "dev:reset": "./scripts/dev-reset.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "migrate:all": "pnpm migrate:user && pnpm migrate:payment && pnpm migrate:reviews && pnpm migrate:learning",
    "migrate:user": "cd apps/user-service && pnpm typeorm:migration:run",
    "migrate:payment": "cd apps/payment-service && pnpm typeorm:migration:run",
    "migrate:reviews": "cd apps/reviews-service && pnpm typeorm:migration:run",
    "migrate:learning": "cd apps/learning-service && pnpm typeorm:migration:run",
    "seed:all": "pnpm seed:user && pnpm seed:payment && pnpm seed:reviews && pnpm seed:learning",
    "seed:user": "cd apps/user-service && pnpm seed:run",
    "seed:payment": "cd apps/payment-service && pnpm seed:run",
    "seed:reviews": "cd apps/reviews-service && pnpm seed:run",
    "seed:learning": "cd apps/learning-service && pnpm seed:run",
    "validate:setup": "./scripts/validate-setup.sh"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/config": "^3.2.3",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/cqrs": "^10.2.6",
    "@nestjs/microservices": "^11.0.1",
    "@nestjs/websockets": "^11.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "concurrently": "^9.0.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@edtech/types(|/.*)$": "<rootDir>/libs/types/src/$1",
      "^@edtech/utils(|/.*)$": "<rootDir>/libs/utils/src/$1",
      "^@edtech/events(|/.*)$": "<rootDir>/libs/events/src/$1",
      "^@edtech/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@edtech/domain(|/.*)$": "<rootDir>/libs/domain/src/$1",
      "^@edtech/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@edtech/security(|/.*)$": "<rootDir>/libs/security/src/$1",
      "^@edtech/communication(|/.*)$": "<rootDir>/libs/communication/src/$1",
      "^@edtech/validation(|/.*)$": "<rootDir>/libs/validation/src/$1",
      "^@edtech/notifications(|/.*)$": "<rootDir>/libs/notifications/src/$1",
      "^@edtech/analytics(|/.*)$": "<rootDir>/libs/analytics/src/$1"
    }
  }
}