{
  "name": "edtech-platform-backend",
  "version": "0.0.1",
  "description": "EdTech Platform Backend - A comprehensive microservices-based learning platform",
  "author": "EdTech Platform Team",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:libs": "nest build types && nest build auth && nest build service-auth && nest build cache && nest build s3 && nest build constants && nest build nestjs-drizzle && nest build shared-kernel",
    "build:check": "tsc --noEmit",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/edtech-platform-backend/main",
    "start:identity": "nest start identity-service --watch",
    "start:tutor": "nest start tutor-service --watch",
    "start:admin": "nest start admin-service --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/edtech-platform-backend/test/jest-e2e.json",
    "test:db-connections": "node scripts/test-db-connections.js",
    "dev:setup": "./scripts/dev-setup.sh",
    "dev:reset": "./scripts/dev-reset.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:push": "drizzle-kit push",
    "drizzle:studio": "drizzle-kit studio",
    "drizzle:identity:generate": "cd apps/identity-service && drizzle-kit generate",
    "drizzle:identity:migrate": "cd apps/identity-service && drizzle-kit migrate",
    "drizzle:identity:push": "cd apps/identity-service && drizzle-kit push",
    "drizzle:identity:studio": "cd apps/identity-service && drizzle-kit studio",
    "drizzle:tutor:generate": "cd apps/tutor-service && drizzle-kit generate",
    "drizzle:tutor:migrate": "cd apps/tutor-service && drizzle-kit migrate",
    "drizzle:tutor:push": "cd apps/tutor-service && drizzle-kit push",
    "drizzle:tutor:studio": "cd apps/tutor-service && drizzle-kit studio",
    "drizzle:admin:generate": "cd apps/admin-service && drizzle-kit generate",
    "drizzle:admin:migrate": "cd apps/admin-service && drizzle-kit migrate",
    "drizzle:admin:push": "cd apps/admin-service && drizzle-kit push",
    "drizzle:admin:studio": "cd apps/admin-service && drizzle-kit studio",
    "migrate:all": "pnpm drizzle:identity:migrate && pnpm drizzle:tutor:migrate && pnpm drizzle:admin:migrate",
    "validate:setup": "./scripts/validate-setup.sh",
    "test:integration": "jest --config ./tests/jest-integration.config.js",
    "test:performance": "jest --config ./tests/jest-performance.config.js",
    "test:ci": "npm run test:unit && npm run test:integration",
    "db:migrate": "cd libs/database && npm run migrate",
    "db:seed": "cd libs/database && npm run seed",
    "security:scan": "npm audit && echo 'Security scan completed'",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.840.0",
    "@aws-sdk/client-eventbridge": "^3.840.0",
    "@aws-sdk/client-s3": "^3.842.0",
    "@aws-sdk/client-ssm": "^3.840.0",
    "@aws-sdk/client-sts": "^3.840.0",
    "@aws-sdk/s3-request-presigner": "^3.842.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^11.0.1",
    "@nestjs/cqrs": "^10.2.8",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/terminus": "^11.0.0",
    "@types/pg": "^8.15.4",
    "aws-jwt-verify": "^5.1.0",
    "cache-manager": "^7.0.1",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "pg": "^8.16.3",
    "redis": "^5.5.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "concurrently": "^9.0.1",
    "eslint": "^9.18.0",
    "globals": "^16.0.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@edtech/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@edtech/cache(|/.*)$": "<rootDir>/libs/cache/src/$1",
      "^@edtech/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@edtech/nestjs-drizzle(|/.*)$": "<rootDir>/libs/nestjs-drizzle/src/$1",
      "^@edtech/s3(|/.*)$": "<rootDir>/libs/s3/src/$1",
      "^@edtech/service-auth(|/.*)$": "<rootDir>/libs/service-auth/src/$1",
      "^@edtech/shared-kernel(|/.*)$": "<rootDir>/libs/shared-kernel/src/$1",
      "^@edtech/types(|/.*)$": "<rootDir>/libs/types/src/$1"
    }
  }
}