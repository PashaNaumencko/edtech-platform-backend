{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@edtech/config": [
        "libs/config/src"
      ],
      "@edtech/config/*": [
        "libs/config/src/*"
      ],
      "@edtech/constants": [
        "libs/constants/src"
      ],
      "@edtech/constants/*": [
        "libs/constants/src/*"
      ],
      "@edtech/nestjs-drizzle": [
        "libs/nestjs-drizzle/src"
      ],
      "@edtech/nestjs-drizzle/*": [
        "libs/nestjs-drizzle/src/*"
      ],
      "@edtech/service-auth": [
        "libs/service-auth/src"
      ],
      "@edtech/service-auth/*": [
        "libs/service-auth/src/*"
      ],
      "@edtech/shared-kernel": [
        "libs/shared-kernel/src"
      ],
      "@edtech/shared-kernel/*": [
        "libs/shared-kernel/src/*"
      ],
      "@edtech/types": [
        "libs/types/src"
      ],
      "@edtech/types/*": [
        "libs/types/src/*"
      ]
    }
  }
}