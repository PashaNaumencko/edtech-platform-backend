{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/types/*": ["./types/*"],
      "@/resolvers/*": ["./resolvers/*"],
      "@/services/*": ["./services/*"],
      "@/error-handling/*": ["./error-handling/*"]
    }
  },
  "include": [
    "resolvers/**/*",
    "types/**/*", 
    "services/**/*",
    "gateway/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts/**/*",
    "registry/**/*"
  ]
} 